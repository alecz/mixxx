<!DOCTYPE template>
<!--
  Description:
    An effect unit widget.
  Variables:
    group: The group for the controls.
-->
<Template>
  <SetVariable name="group">[EffectRack<Variable name="EffectRack"/>_EffectUnit<Variable name="EffectUnit"/>]</SetVariable>
  <WidgetGroup>
    <ObjectName>EffectUnit</ObjectName>
    <Layout>horizontal</Layout>
    <Children>
      <WidgetGroup>
        <Layout>vertical</Layout>
        <BackPath>background_tile.png</BackPath>
        <Children>
          <Template src="skin:effect_slot_maxi.xml">
            <SetVariable name="EffectRack">1</SetVariable>
            <SetVariable name="EffectUnit"><Variable name="EffectUnit"/></SetVariable>
            <SetVariable name="Effect">1</SetVariable>
          </Template>
          <Template src="skin:effect_slot_maxi.xml">
            <SetVariable name="EffectRack">1</SetVariable>
            <SetVariable name="EffectUnit"><Variable name="EffectUnit"/></SetVariable>
            <SetVariable name="Effect">2</SetVariable>
          </Template>
          <Template src="skin:effect_slot_maxi.xml">
            <SetVariable name="EffectRack">1</SetVariable>
            <SetVariable name="EffectUnit"><Variable name="EffectUnit"/></SetVariable>
            <SetVariable name="Effect">3</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>
      
      <WidgetGroup>
        <Layout>vertical</Layout>
        <SetVariable name="SizePolicy">min,min</SetVariable> 
        <Children>
          <Label>
            <Size>15,15</Size>
            <Text>FX<Variable name="EffectUnit"/></Text>
          </Label>
          <Template src="skin:knob.xml">
            <SetVariable name="control">mix</SetVariable>
            <SetVariable name="label">Mix</SetVariable>
          </Template>
            <Template src="skin:effect_unit_group_control_button.xml">
            <SetVariable name="group_name">MASTER</SetVariable>
            <SetVariable name="group_group">[Master]</SetVariable>
          </Template>
        </Children>
      </WidgetGroup>
    </Children>
  </WidgetGroup>
</Template>
